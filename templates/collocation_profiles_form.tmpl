#encoding UTF-8
#from cmpltmpl.document import document
#extends document

#def title
$_("Collocation profiles")#slurp
#end def

#def bodyonload
#end def

#def headers
<link rel="stylesheet" type="text/css" href="$files_path/css/${css_prefix}colloc.css" />
#end def

#def left_submenu_help
#end def

#def left_submenu_expert

#end def

#def main
<h1>$_('Collocation profiles')</h1>
<form action="collocation_profiles" method="GET">
    #filter None
    $input_hidden
    #end filter

    <table>
        <tr>
            <th>$_('Granularity')</th>
            <td>
                <select name="granularity">
                    <option value="high">$_('High')</option>
                    <option value="medium">$_('Medium')</option>
                    <option value="low">$_('Low')</option>
                </select>
            </td>
        </tr>
        <tr>
            <th>$_('Confidence')</th>
            <td>
                <select name="confidence">
                    <option value="high">$_('High')</option>
                    <option value="low">$_('Low')</option>
                    <option value="none">$_('None')</option>
                </select>
            </td>
        </tr>
        <tr>
            <th>$_('Clustering')</th>
            <td>
                <select name="clustering">
                    <option value="unique">$_('Unique')</option>
                    <option value="multiple">$_('Multiple')</option>
                </select>
            </td>
        </tr>
        <tr>
            <th>$_('Auto-focus')</th>
            <td><input type="checkbox" name="auto_focus" value="1" checked="checked" /></td>
        </tr>
    </table>

    <button type="submit">$_('Analyze')</button>
</form>

#end def
