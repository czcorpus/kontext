## XML format
#if $saveformat == 'xml'
<?xml version="1.0" encoding="$corpencoding"?>
#filter WebSafe
<collocations>
  #if $heading
  <heading>
    <corpus>$corpname</corpus>
    <query>#slurp
    #for $d in $Desc
$d.arg#slurp
    #end for
#slurp
</query>
    <scores>
    #for $s in $Scores
      <score>$s.n</score>
    #end for
    </scores>
  </heading>
  #end if
  <items>
  #for $i in $Items
    <item>
      <str>$i.str</str>
      <freq>$i.freq</freq>
    #for $ss in $i.Stats
      <score>$ss.s</score>
    #end for
    </item>
  #end for
  </items>
</collocations>

#end filter
#elif $saveformat == 'text' ## Text format
  #if $heading
\# Collocations
\# Corpus: $corpname
    #for $d in $Desc
\# $d.op:  $d.arg $d.size
    #end for

  #end if
  #for $h in $Head
| $h.n	#slurp
  #end for

------------------------------------------------------------
#for $i in $Items
$i.str	$i.freq	#slurp
  #for $ss in $i.Stats
$ss.s	#slurp
  #end for

#end for
#elif $saveformat == 'csv' ## CSV format
#for $row in $data
$row#slurp
#end for
#end if

