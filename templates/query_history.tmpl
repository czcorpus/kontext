#block main
<h2>$_('query history')</h2>

#for $row in $data
<div class="query-history-item#if $row.tmp# autosaved#end if#" data-query-id="$row.id">
    <h4>$row.created | <a class="open" href="#filter WebSafe#$row.url#end filter#">$_('open')</a> | <a class="delete" href="#">$_('delete')</a>
    #if $row.tmp#| $_('autosaved')#end if#</h4>
    #filter None#$row.description#end filter#
</div>
#end for

#end block