#encoding UTF-8
#unless $mode_included
<!DOCTYPE html>
<html>
#filter WebSafe
<head>
    <title>$_('Error')</title>
    #end filter
    <meta charset="utf-8" />
    <link rel="stylesheet" type="text/css" href="$files_path/css/${css_prefix}bonito.css" />
    <script src="$files_path/js/requirejs.min.js" type="text/javascript"></script>
    <script type="text/javascript">
        requirejs.config({
            baseUrl : '../files/js',
            paths: {
                'domReady' : './domReady.min',
                'jquery': './jquery.min'
            },
            shim : {
                'jquery.cookies' : {
                    deps : ['jquery'],
                    exports : 'jaaulde.utils.cookies'
                }
            }
        });

        define('win', [], function () { return window; });
    </script>
</head>
<body>

<div>
    <table id="topbar">
        <tr>
            <td rowspan="2">
                <a href="../run.cgi/first_form">
                    <img id="logo" alt="Sketch Engine" src="../files/img/logo.png" />
                </a>
            </td>
            <td id="topbar-navigation">
            </td>
        </tr>
    </table>
</div>

#end unless



#filter WebSafe
<div id="error" class="system-error">
    <div class="frame">
        <img class="icon" alt="Error" src="../files/img/error-icon.png">
        <p>$message</p>
        <a href="$_home_url" class="close-icon" title="$_('home page')">
            <img src="../files/img/close-icon.png" />
        </a>
    </div>
</div>

#end filter

#unless $mode_included
</body>
</html>
#end unless