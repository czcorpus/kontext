#from cmpltmpl.conc import conc
#extends conc

#def title
$_("Freqs form")#slurp
#end def

#attr $focus = "'#submit'"

#def bodyonload
require(['tpl/freq', 'domReady!'], function (pageSelf, domReady) {
    conf.messages['msg'] = "$_('This counts only for multi-word KWICs')";
    conf.messages['remove_item'] = "$_('Remove item')";
    conf.messages['max_level_reached'] = "$_('Maximum level reached.')";
    conf.multilevel_freq_dist_max_levels = $multilevel_freq_dist_max_levels;
    conf.lastNumLevels = #if $last_num_levels#$last_num_levels#else#null#end if#;
    pageSelf.init(conf);
});
#end def

#def main
#filter WebSafe
<h2>$_("Multilevel frequency distribution")</h2>
<form action="freqml">
<fieldset class="anonymous">
#filter None
$input_hidden
#end filter
<p>
  <input type="hidden" name="ml" value="1" />
  $_("Frequency limit"): <input type="text" name="flimit" value="$flimit" size="7" />
</p>
<table id="multilevel-freq-params">
    <tr>
        <th>$_('Level')</th>
        <th>$_('Attribute')</th>
        <th>$_('Ignore case')?</th>
        <th>$_('Position')</th>
        <th>$_("(Node) start at") <sup><a class="kwic-alignment-help" href="#">?</a></sup></th>
        <th></th>
    </tr>
    <tr id="multilevel-freq-first-level" class="level-line">
        <td class="level">
            1.
        </td>
        <td>
            <input type="hidden" name="freqlevel" value="1" />
            <select name="ml1attr">
                #for $a in $AttrList
                <option value="$a.n">$_($a.label)</option>
                #end for
            </select>
        </td>
        <td>
            <input type="checkbox" name="ml1icase" value="i" #if $ml1icase#checked="checked"#end if# />
        </td>
        <td>
            <select name="ml1ctx">
                #for $p in $Pos_ctxs
                <option value="$p.ctx" #if $p.ctx == $ml1ctx#selected="selected"#end if#>$_($p.n)</option>
                #end for
            </select>
        </td>
        <td>
            <div id="kwic-alignment-box" style="display: none">
                <select class="kwic-alignment" id="kwic-alignment-1">
                    <option value="left">$_("leftmost KWIC word")</option>
                    <option value="right">$_("rightmost KWIC word")</option>
                </select>
            </div>
        </td>
        <td>
            -
        </td>
    </tr>
    <tr class="last-line">
        <td>
            <button id="add-freq-level-button" type="button">$_('Add level')</button>
        </td>
        <td colspan="5">

        </td>
    </tr>
</table>
<div class="buttons">
  <input class="submit" type="submit" value="$_("Make Frequency List")" id="submit" />
</div>
</fieldset>
</form>

#if $StructAttrList
<h3>$_("Text Type frequency distribution")</h3>
<form action="freqtt">
<fieldset class="anonymous">
#filter None
$input_hidden
#end filter
<table class="form">
  <tr>
    <th>$_("Frequency limit"):</th>
    <td><input type="text" name="flimit" value="$flimit" size="7" /></td>
  </tr>
  <tr>
    <th>$_("Include categories with no hits"):</th>
    <td><input type="checkbox" name="ftt_include_empty" /></td>
  </tr>
  <tr>
  <td colspan="2">
  <select name="fttattr" size="8" multiple="multiple">
  #for $s in $StructAttrList
    <option value="$s.n">$_($s.label)</option>
  #end for
  </select></td>
  </tr>
</table>

<div class="buttons">
  <input class="submit" type="submit" value="$_("Make Frequency List")" />
</div>
</fieldset>
</form>
#end if

#end filter
#end def
