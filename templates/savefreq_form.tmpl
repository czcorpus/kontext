#from cmpltmpl.conc import conc
#extends conc

#def title
$_("Save Frequency List")#slurp
#end def

#attr $focus = "'#submit'"

#def main
#filter WebSafe
<h3>$_("Save Frequency list")</h3>
<form action="savefreq">
<fieldset>
#filter None
$input_hidden
#end filter
#for $f in $FCrit
  <input type="hidden" name="fcrit" value="$f['fcrit']" />
#end for
#set $paging = 0
#if $len($FCrit) == 1
  #set $paging = 1
#end if
<input type="hidden" name="freq_sort" value="$freq_sort" />
<input type="hidden" name="ftt_include_empty" value="$ftt_include_empty" />
<input type="hidden" name="ml" value="$ml" />
<input type="hidden" name="flimit" value="$flimit" />

<table class="form">
  <tr>
    <th>$_("Save frequency list as"):</th>
    <td>
      <label>
        <input type="radio" name="saveformat" value="text"
        #if $saveformat == 'text'
          checked="checked"
        #end if
        /> $_("Text")
      </label>
      <label>
        <input type="radio" name="saveformat" value="xml"
        #if $saveformat == 'xml'
          checked="checked"
        #end if
        /> $_("XML")
      </label>
    </td>
  </tr>
  #if $paging
    <tr class="separator">
      <th>$_("Save pages"):</th>
      <td>
      <label>
        <input type="radio" name="pages" value="0"
        #if $pages == 0
          checked="checked"
        #end if
        /> $_("All")
      </label>
      </td>
    </tr><tr>
      <th></th>
      <td>
      <label>
        <input type="radio" name="pages" value="1"
        #if $pages == 1
          checked="checked"
        #end if
        /> $_("Only page"):
   <input type="text" name="fpage" value="$fpage" size="5" />
      </label>
      </td>
    </tr>
  #end if
  <tr class="separator">
    <th>$_("Include heading"):</th>
    <td><input type="checkbox" name="heading" value="1" checked="checked" /></td>
  </tr>
  #if $paging
    <tr>
      <th>$_("Maximum number of lines"):</th>
      <td><input type="text" name="maxsavelines" value="$maxsavelines" size="7" /></td>
    </tr>
  #end if
</table>

<div class="buttons">
<input type="submit" value="$_("Save Frequency List")" id="submit" />
</div>
</fieldset>
</form>
#end filter
#end def
