#encoding UTF-8
#from translation import ugettext as _
#from cmpltmpl.document import document
#extends document

#def title
#end def

#def bodyonload
require(['tpl/concDesc', 'conf', 'domReady!'], function(pageSelf, conf) {
    conf.queryId = "$query_id";
    conf.messages.failed_to_save_the_query = "$_('Failed to save the query')";
    pageSelf.init(conf);
});
#end def

#block main
#filter WebSafe
<h2>$_("Concordance description")</h2>

<p>$_("Corpus"): <b>$corp_full_name</b>
    #if $usesubcorp
    $_("Subcorpus"): <b>$usesubcorp</b>
    #end if
</p>

<table class="data" id="concdesc">
    <thead>
    <tr>
        <th>$_("Operation")</th>
        <th>$_("Parameters")</th>
        <th>$_("Num of Hits")</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    #set $i = 0
    #for $d in $Desc
    <tr class="#if $i % 2 == 1#odd#end if#">
        <td>$d.op</td>
        <td>$d.arg</td>
        <td align="right">$d.size</td>
        <td>
            #if $d.tourl
            #set $href = 'view?' + $d.tourl + ';' + $globals
            <a href="$href">$_('View result')</a>
            #end if
        </td>
    </tr>
    #set $i += 1
    #end for
    </tbody>
</table>
#end filter

#end block
