#from cmpltmpl.conc import conc
#extends conc

#def title
$_("Sort form")#slurp
#end def

#attr $focus = "'#select'"

#def helpblock
  #if $varExists('helpsite')
  <li class="context_help"><a href="${helpsite}sortconc" rel="help">$_("? Help on Sort form")</a></li>
  #end if
#end def

#def bodyonload
require(['popupbox', 'jquery'], function (popupbox, \$) {
    multiLevelKwicFormUtil.init();
    \$('a.kwic-alignment-help').each(function () {
        \$(this).bind('click', function (event) {
            var msg = "$_('This counts only for multi-word KWICs')";
            popupbox.createPopupBox(event, 'kwic-alignment-help-box', \$('#toolbar-info'), msg, {
                'top' : 'attached-bottom',
                'width' : 'auto',
                'height' : 'auto'
            });
            event.stopPropagation();
        });
    });
});
#end def

#def main
#filter WebSafe
<h3>$_("Simple Sort")</h3>
<form action="sortx">
<fieldset>
#filter None
$input_hidden
#end filter
<table class="form">
  <tr>
    <th>$_("Attribute"):</th>
    <td><select name="sattr" id="select">
  #for $a in $Sort_attrlist
    <option value="$a['n']">$_($a['n'])</option>
  #end for
  #for $a in $StructAttrList
    <option value="$a['n']">$_($a['label'])</option>
  #end for
  </select></td>
  </tr>
  <tr>
    <th>$_("Sort key"):</th>
    <td><label><input type="radio" name="skey" value="lc"
  #if $skey == 'lc'
    checked="checked"
  #end if
  />$_("Left context")</label>
  <label><input type="radio" name="skey" value="kw" 
  #if $skey == 'kw'
    checked="checked"
  #end if
  />$_("Node")</label>
  <label><input type="radio" name="skey" value="rc" 
  #if $skey == 'rc'
    checked="checked"
  #end if
  />$_("Right context")</label></td>
  </tr>
  <tr>
    <th>$_("Number of tokens to sort"):</th>
    <td><input type="text" name="spos" value="$spos" size="3" /></td>
  </tr>
  <tr>
  <td colspan="2">
  <label>$_("Ignore case") <input type="checkbox" name="sicase" value="i"
  #if $sicase
    checked="checked"
  #end if
  /></label>
  <label>$_("Backward")<input type="checkbox" name="sbward" value="r" 
  #if $sbward
    checked="checked"
  #end if
  /></label>
  </td>
  </tr>
</table>
<div class="buttons">
  <input type="submit" value="$_("Sort Concordance")" />
</div>
</fieldset>
</form>

