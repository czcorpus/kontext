<bonito>
    <global>
        <manatee_path>x</manatee_path>
        <log_path>/var/log/bonito/application.log</log_path>
        <debug>true</debug>
    </global>
    <database>
        <adapter>sqlite</adapter>
        <name>bonito</name>
        <host>localhost</host>
        <password>bonito</password>
        <username>bonito</username>
    </database>
    <cache>
        <clear_interval>61</clear_interval>
    </cache>
    <corpora>
        <manatee_registry>/var/local/corpora/registry</manatee_registry>
        <options_dir>/var/local/corpora/registry/options</options_dir>
        <cache_dir>/var/local/corpora/cache</cache_dir>
        <subcpath>/var/local/corpora/subcorp/GLOBAL</subcpath>
        <users_subcpath>/var/local/corpora/subcorp</users_subcpath>
        <tags_src_dir>../test-data/tags</tags_src_dir>
        <tags_cache_dir>/tmp/tags-cache</tags_cache_dir>
        <conc_dir>/var/local/corpora/conc</conc_dir>
        <wseval_dir></wseval_dir>
        <helpsite>https://trac.sketchengine.co.uk/wiki/SkE/Help/PageSpecificHelp/</helpsite>
        <default_corpora>
            <item>syn2010</item>
            <item>omezeni/syn2010</item>
            <item>omezeni/oral2013</item>
        </default_corpora>
        <speech_segment_struct_attr>seg.soundfile</speech_segment_struct_attr>
        <speech_data_url>http://127.0.0.1/data</speech_data_url>
        <kwicline_max_context>500</kwicline_max_context>
        <use_db_whitelist>true</use_db_whitelist>

        <corplist title="">
            <corplist title="Synchronní psané korpusy">
                <corplist title="řada SYN">
                    <corpus id="SYN" web="http://www.korpus.cz/syn.php" sentence_struct="s" />
                    <corpus id="SYN2010" web="http://www.korpus.cz/syn2010.php" sentence_struct="s" />
                    <corpus id="SYN2000" web="http://www.korpus.cz/syn2000.php" sentence_struct="s" />
                </corplist>
                <corplist title="ke slovníkům">
                    <corpus id="CAPEK" sentence_struct="s" />
                    <corpus id="HRABAL" sentence_struct="s" />
                </corplist>
            </corplist>
            <corplist title="Synchronní mluvené korpusy">
                <corplist title="řada ORAL">
                    <corpus id="ORAL" sentence_struct="sp" />
                    <corpus id="ORAL2013" sentence_struct="sp" />
                    <corpus id="ORAL2008" web="http://www.korpus.cz/ORAL2008.php" sentence_struct="sp" />
                    <corpus id="ORAL2006" web="http://www.korpus.cz/ORAL2006.php" sentence_struct="sp" />
                </corplist>
            </corplist>
            <corplist title="Cizojazyčné korpusy">
                <corpus id="BNC" sentence_struct="s" />
                <corpus id="SUSANNE" sentence_struct="s" />
            </corplist>
        </corplist>
        <tagsets>
            <tagset position="0">
                <value id="A">
                    <desc lang="en">adjective</desc>
                </value>
                <value id="R">
                    <desc lang="en">preposition</desc>
                </value>
            </tagset>
            <tagset position="1">
                <value id="X">
                    <desc lang="en">experimental item</desc>
                </value>
            </tagset>
        </tagsets>
    </corpora>
</bonito>

